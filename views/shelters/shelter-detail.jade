.container-fluid.banner
  .container
    h1.text-center {{shelter.name}}

.container(style="margin-top: 2rem;")
  .row
    .col-md-4
      .well
        h3 Details
        ul
          li Age: {{shelter.age}}
          li Type: {{shelter.animal}}

      .well
        h3 Actions
        ul
          li
            button.btn.btn-raised.btn-primary(ng-click='subscribe()') Subscribe
          li
            button.btn.btn-raised.btn-primary Favorite
          li
            button.btn.btn-raised.btn-primary Share
          li
            button.btn.btn-raised.btn-primary Contact

    .col-md-8
      //- .well(style="height:250px")
      //-   .col-md-3(ng-repeat="photo in shelter.media", ng-if='$index % 5 === 3')
      //-     img(ng-src="{{photo}}", style="width:100%;")
      .well
        h3 Description
        p {{shelter.description}}
