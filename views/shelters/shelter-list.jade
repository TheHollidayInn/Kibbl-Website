.container-fluid(window-resize,style='padding:0px;', offset="40", uib-collapse="filterCollapsed", ng-class="{collapsed: filterCollapsed}")
  div.col-md-12.well(style="min-height:100px;")  
    .form-group.col-md-2
      h1(ng-if='!loading') Shelters
      h1.loader(ng-if='loading') Loading...
      button.btn.btn-primary.btn-raised.visible-xs(ng-click='filter();filterCollapsed = true') Filter
  
    .form-group.col-md-2
      label Search
      input.form-control(ng-model='filters.search', type='text')
    
    .form-group.col-md-2
      label Location
      input.form-control(ng-model='filters.location', type='text', googleplace-autocomplete, googleplace-autocomplete-place='filters.autocomplete')
    
    //- .form-group.col-md-2
    //-   label Type
    //-   br
    //-   select.form-control(ng-model='filters.type', 
    //-     ng-options="type.name for type in eventTypes track by type.id")
    //-       option(value="") - Select Option -

    .form-group.col-md-2
      button.btn.btn-primary.btn-raised.hidden-xs(ng-click='filter()') Filter

.container
  button.btn.btn-success.btn-raised.visible-xs.filter-toggle(ng-click='toggleFilter()') Toggle Filter
  div.row(infinite-scroll="scroll()", infinite-scroll-distance="1")
    include shelter-list-item
