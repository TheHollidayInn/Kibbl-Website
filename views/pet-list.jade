div.row
  div.col-md-4.pet-grid-item(ng-repeat="pet in pets", ng-if="pet.media.photos.photo[3].t")
    .card
      a(href="#/pets/{{pet._id}}")
        .card-image(style="height:300px;overflow:hidden;")
          img(src='{{pet.media.photos.photo[3].t}}')
          span.card-title {{pet.name.t}}
      .card-content
        div(style="height:150px;overflow:hidden;")
          {{pet.description.t}}
      .card-action
        a.btn.waves-effect.waves-light.red.lighten-3(href="mailto:{{pet.contact.email.t}}") Contact
        a.btn.waves-effect.waves-light.red.lighten-3(href="mailto:{{pet.contact.email.t}}") Donate
        a.btn.waves-effect.waves-light.red.lighten-3.right(ng-click="favorite(pet._id)", style="width: 40px;")
          i.small.material-icons star_rate

