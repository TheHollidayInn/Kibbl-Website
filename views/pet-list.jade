div.row(style="min-height:100px;")  
  div.form-group.col-md-2
    label Location
    input(ng-model='filters.location', type='text')
  
  .input-field.col-md-2
    select.browser-default(ng-model='filters.type')
      option(value='', disabled='', selected='') Choose your option
      option(value='Dog') Dog
      option(value='Cat') Cat
      option(value='Bird') Bird
    label Type
  
  .input-field.col-md-2
    label Breed
    input(ng-model='filters.breed', type='text')
    
  .input-field.col-md-2
    select.browser-default(ng-model='filters.age')
      option(value='', disabled='', selected='') Choose your option
      option(value='Baby') Baby
      option(value='Young') Young
      option(value='Adult') Adult
      option(value='Senior') Senior
    label Age
      
  .input-field.col-md-2
    select.browser-default(ng-model='filters.gender')
      option(value='', disabled='', selected='') Choose your option
      option(value='M') Male
      option(value='F') Female
      option(value='U') Unknown
    label Gender
  
