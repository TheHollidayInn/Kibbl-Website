.container-fluid.banner
  .container
    h1.text-center {{pet.name}}

.container(style="margin-top: 2rem;")
  .row
    .col-md-4
      .well
        h3 Details
        ul
          li Age: {{pet.age}}
          li Type: {{pet.animal}}

        h3 Breed
        ul
          li(ng-repeat="breed in pet.breeds") {{breed}}
      
      .well
        h3 Actions
        ul
          li
            button.btn.btn-raised.btn-primary Favorite
          li
            button.btn.btn-raised.btn-primary Share
          li
            button.btn.btn-raised.btn-primary Contact

    .col-md-8
      .well(style="height:250px")
        .col-md-3(ng-repeat="photo in pet.media", ng-if='$index % 5 === 3')
          img(src="{{photo}}", style="width:100%;")
      .well
        h3 Description
        p {{pet.description}}
