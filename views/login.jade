section.container
  div.col-md-6.col-md-offset-3
    .card
      .card-height-indicator
      .card-content
        .card-body(style='height:auto;')
           h2 Login
           form
            .form-group.input-field
              label Email
              input.form-control(type='text', name='email', ng-model='email')
            .form-group.input-field
              label Password
              input.form-control(type='password', name='password', ng-model='password')
            button.btn.btn-primary.btn-raised.btn-lg(type='submit', ng-click='login()') Login
            hr
            p
              button.btn.btn-facebook.btn-raised.btn-lg(fb-login type="button", style='background-color:#3b5998') Facebook
            p
              | Need an account? 
              a(href='/signup') Signup
