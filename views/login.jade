extends layout

block content
  section.container
    div.col-md-6.col-md-offset-3
      h2 Login
      .card
        .card-image.waves-effect.waves-block.waves-light
        .card-content
          form(action='/login', method='post')
            .form-group.input-field
              label Email
              input.form-control(type='text', name='email')
            .form-group.input-field
              label Password
              input.form-control(type='password', name='password')
            button.btn.btn-warning.btn-lg(type='submit') Login
        .card-action
          a.btn.btn-primary.btn-lg(href="/auth/facebook")
            span.fa.fa-facebook
              | Facebook
          a.btn.btn-primary.btn-lg(href="/auth/twitter")
            span.fa.fa-twitter
              | Twitter
          a.btn.btn-primary.btn-lg(href="/auth/google")
            span.fa.fa-google-plus
              | Google
          p
            | Need an account? 
            a(href='/signup') Signup
      
